[user]
        name = cpettet
        email = rush@wikimedia.org
[branch]
        autosetuprebase = always
[core]
        editor = /usr/bin/nano
        pager = less
[color]
    status = auto
        ui = true

[color "status"]
    added = white
    changed = cyan
    untracked = magenta
    deleted = red
[format]
        pretty = "Commit:  %C(yellow)%H%nAuthor:  %C(green)%aN <%aE>%nDate:    (%C(red)%ar%Creset) %ai%nSubject: %s%n%n%b"
[alias]
        lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
        timeline = log --oneline --graph --decorate
[help]
        autocorrect = 1
[push]
	default = matching
